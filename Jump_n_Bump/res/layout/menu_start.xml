<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/input" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/start_button_touch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/touch" />

        <RadioButton
            android:id="@+id/start_button_touch_jump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/touch_with_jump" />

        <RadioButton
            android:id="@+id/start_button_keyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/keyboard" />

        <RadioButton
            android:id="@+id/start_button_multi_touch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multi_touch" />
    </RadioGroup>

</LinearLayout>