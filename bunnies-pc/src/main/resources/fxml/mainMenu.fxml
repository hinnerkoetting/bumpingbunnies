<GridPane alignment="center" hgap="10.0" vgap="10.0" 
             xmlns:fx="http://javafx.com/fxml">
     <padding>
         <Insets bottom="10.0" left="10.0" right ="10.0" top="10.0"/>
     </padding>
        
     <Button text="With two players" fx:id="withTwoPlayersButton"   onAction="#onButtonWithTwoPlayers" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
     <Button text="With ai" fx:id="withAiButton" onAction="#onButtonWithAi" GridPane.rowIndex= "0" GridPane.columnIndex="1"/>
	<Button text="Connect" fx:id="connectButton" disable="true" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
 
              
     <TableView fx:id="playerTable"	maxWidth="500" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2">
     	 <columns>
     	 	<TableColumn text="Name" >
     	 		<cellValueFactory>
                      <PropertyValueFactory property="name" />
                  </cellValueFactory>
     	 	</TableColumn>
     	 </columns>
     	
     </TableView>

</GridPane>