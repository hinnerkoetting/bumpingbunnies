	<FlowPane vgap="5" hgap="5">
		<GridPane vgap="5" hgap="5">
		
			<ToggleButton text="Circle" fx:id="circleButton" onAction="#onActionCircle"/>
			<ToggleButton text="Rectangle" fx:id="rectangleButton" GridPane.rowIndex="1" onAction="#onActionRectangle"/>
		</GridPane>
		
		<Canvas fx:id="canvas" width="500" height="500"/>
	</FlowPane>
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
	</padding>

</GridPane>

